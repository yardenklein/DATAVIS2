{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 420,
  "height": 240,
  "data": {
    "url": "data/ME_GPI_AVG_2008_2022.csv"
  },
  "params": [
    {
      "name": "continent",
      "select": {"type": "point", "fields": ["Continent"]},
      "bind": "legend"
    }
  ],
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Continent",
      "title": "Continent",
      "axis": {
        "labelExpr": "",
        "tickOpacity": 0
      }
    },
    "x": {
      "aggregate": "sum",
      "field": "Total_Military_Expenditure_2008_2022",
      "type": "quantitative",
      "sort": "ascending",
      "title": "Average Military Expenditure (2009-2022, USD in Millions)",
      "axis": {
        "tickMinStep": 7500
      }
    },
    "color": {
      "field": "Continent",
      "scale": {
        "domain": ["Africa", "Asia", "Europe", "North America", "Oceania", "South America"],
        "range": ["#ff6347", "#ffd700", "#32cd32", "#1e90ff", "#ff69b4", "#8a2be2"]
      },
      "legend": {
        "title": "Continents",
        "orient": "bottom"
      }
    },
    "opacity": {
      "condition": {"param": "continent", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "Continent", "type": "nominal", "title": "Continent"},
      {"field": "Total_Military_Expenditure_2008_2022", "type": "quantitative", "title": "Military Expenditure (Millions USD)"}
    ]
  },
  "config": {
    "background": "#f8f8f8",
    "font": "sulphur",
    "style": {
      "cell": {"stroke": "transparent"}
    }
  }
}
